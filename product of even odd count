import java.util.*;
class Assign1
{
  public static void main(String args[])
  {
    Scanner sc=new Scanner(System.in);
    int i,size;
    System.out.println("enter size of array");
    size=sc.nextInt();
    int a[]=new int[size];
    System.out.println("enter elements into the array:");
    for(i=0;i<size;i++)
    {
      a[i]=sc.nextInt();
    }
    int even=0,odd=0;
    for(i=0;i<size;i++)
    {
      if(a[i]%2==0)
      {
       even=even+1;
      }
      else
      {
       odd=odd+1;
      }
    }
    int product=even*odd;
    if(product%2==0)
    {
     System.out.println("the product of even and odd count is an even number");
    }
    else
    {
     System.out.println("the product of even and odd count is an odd number");
    }
  }
}  
